@using Model.ViewModels.StepViewModels
@model StepViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer


@{
    ViewData["Title"] = Localizer["Operators"];
}
<!DOCTYPE html>
<html>
<head>
    <title>@Localizer["Operators"]</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <h2>@Localizer["Operators"]</h2>
    <hr />

    <div class="container">
        <div class="col-lg-4">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th class="col-md-3">
                            @Html.DisplayNameFor(model => model.OperatorModel.OperatorsList)
                        </th>
                        <th class="col-md-1"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OperatorModel.OperatorsList)
                    {
                    <tr>
                        <td class="col-md-3">
                            @item.Name
                        </td>
                        <td class="col-md-1">
                            <a class="btn btn-success" asp-action="Tariffs" asp-route-companyId="@ViewData["companyId"]" asp-route-id="@item.Id">@Localizer["Tariffs"]</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div>
        <a class="btn btn-primary" asp-action="Index">@Localizer["Back to Companies"]</a>
    </div>
</body>
</html>



    @section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    }
