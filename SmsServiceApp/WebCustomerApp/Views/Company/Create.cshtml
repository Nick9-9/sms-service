                    <div class="form-group col-md-12">
                        <label asp-for="SendRecieveModel.StartTime" class="control-label"></label>
                        <div id="StartTimeSR"> </div>
                        <input type="hidden" id="result" class="starttime" asp-for="SendRecieveModel.StartTime">
                        <span asp-validation-for="SendRecieveModel.StartTime" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="SendRecieveModel.EndTime" class="control-label"></label>
                        <div id="EndTimeSR"> </div>
                        <input type="hidden" id="result" class="endtime" asp-for="SendRecieveModel.EndTime">
                        <span asp-validation-for="SendRecieveModel.EndTime" class="text-danger"></span>
                    </div>
                    <a class="btn btn-success btn-lg pull-right" onclick="CreateCampaign()">@Localizer["finish!"]</a>
                </div>

            </div>

        </form>


    </div>


    <script>
        $(document).ready(function () {


            $('[rel="tooltip"]').tooltip();
            var navListItems = $('div.setup-panel div a'),
                allWells = $('.setup-content'),
                allNextBtn = $('.nextBtn'),
                nextStepWizard,
                curStepBtn;

            allWells.hide();

            navListItems.click(function (e) {
                e.preventDefault();
                var $target = $($(this).attr('href')),
                    $item = $(this);

                if (!$item.hasClass('disabled')) {
                    navListItems.removeClass('btn-primary').addClass('btn-default');
                    $item.addClass('btn-primary');
                    allWells.hide();
                    $target.show();
                    $target.find('input:eq(0)').focus();
                }
            });

            allNextBtn.click(function () {


                curStep = $(this).closest(".setup-content");
                curStepBtn = curStep.attr("id"),
                    nextStepWizard = $('div.setup-panel div a[href="#' + curStepBtn + '"]').parent().next().children("a"),
                    curInputs = curStep.find("input[type='text'],input[type='url'],textarea, input[type='radio']"),
                    isValid = true,


                    $(".form-group").removeClass("has-error");
                for (var i = 0; i < curInputs.length; i++) {
                    if (!curInputs[i].validity.valid) {
                        isValid = false;
                        $(curInputs[i]).closest(".form-group").addClass("has-error");
                    }
                }


                if (isValid)
                    nextStepWizard.removeAttr('disabled').trigger('click');
            });

            $('div.setup-panel div a.btn-primary').trigger('click');

            $('.choice').change(function () {
                wizard = $(this).closest('.wizard-card');
                wizard.find('.choice').removeClass('active');
                $(this).addClass('active');
                $(wizard).find('[type="radio"][name="path"]').prop('checked', false);
                $(this).find('[type="radio"][name="path"]').prop('checked', true);
                var value = parseInt($("input[type='radio']:checked").val());
                switch (value) {
                    case 0:
                        $(".recievestep").remove();
                        $(".SendRecieveTime").remove();
                        $(".step4").remove();
                        break;
                    case 1:
                    
                        $(".tariffStep").remove();
                        $(".Message").remove();
                        $(".recipients").remove();
                        break;
                    case 2:
                        $('.step6').css('display', 'none');
                        $('.step6-next').css('display', '');
                        break;
                }
            });
        });
    </script>
    <script>
        document.getElementById("SendLater").style.display = 'none';
        function ShowDate() {
            var sendNow = document.getElementById("SendNowRadio");
            var sendLater = document.getElementById("SendLaterRadio");
            if (sendLater.checked) {
                document.getElementById("SendLater").style.display = 'block';
            }
            if (sendNow.checked) {
                document.getElementById("SendLater").style.display = 'none';
            }
        }
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
