            });
            })
        })(jQuery);
    </script>


</head>
<body>
    <div class="container">
        <div class="stepwizard">
            <div class="stepwizard-row setup-panel">
                <div class="stepwizard-step">
                    <a href="#step-1" type="button" class="btn btn-primary btn-circle">D</a>
                    <p>@Localizer["Description"]</p>
                </div>
                <div class="stepwizard-step">
                    <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">T</a>
                    <p>@Localizer["Type"]</p>
                </div>
                <div class="stepwizard-step tariffStep">
                    <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">O</a>
                    <p>@Localizer["Tariff"]</p>
                </div>


                <div class="stepwizard-step recipients">
                    <a href="#step-5" type="button" class="btn btn-default btn-circle" disabled="disabled">R</a>
                    <p>@Localizer["Recipients"]</p>
                </div>

                <div class="stepwizard-step Message">
                    <a href="#step-6" type="button" class="btn btn-default btn-circle" disabled="disabled">M</a>
                    <p>@Localizer["Message"]</p>
                </div>
                <div class="stepwizard-step step4">
                    <a href="#step-4" type="button" class="btn btn-default btn-circle" disabled="disabled">F</a>
                    <p>@Localizer["Time"]</p>
                </div>

            </div>
        </div>

        <form role="form" asp-controller="Company" asp-action="Create">
            <div class="row setup-content" id="step-1">
                <div class="row">
                    <div class="form-group col-md-12">
                        <label asp-for="CompanyModel.PhoneNumber" class="control-label"></label>
                        <input asp-for="CompanyModel.PhoneNumber" id="campaignPhoneNumber" class="form-control" />
                        <span asp-validation-for="CompanyModel.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label asp-for="CompanyModel.Name" class="control-label"></label>
                        <input asp-for="CompanyModel.Name" id="campaignName" required class="form-control" />
                        @Html.ValidationMessageFor(x => x.CompanyModel.Name)
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label asp-for="CompanyModel.Description" class="control-label"></label>
                        <textarea rows="3" style="resize:none" asp-for="CompanyModel.Description" id="campaignDescription" class="form-control" required></textarea>
                        @Html.ValidationMessageFor(x => x.CompanyModel.Description)
                    </div>
                </div>
                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">@Localizer["Next"]</button>

            </div>

            <div class="card wizard-card" data-color="red" id="wizard">
                <div class="row setup-content" id="step-2">
                    <div class="row">

                        <label asp-for="CompanyModel.Type" class="col-sm-6 col-form-label">@Localizer["Select campaign type"]</label>
                        <div class="col-sm-10">
                            <div class="col-sm-10 col-sm-offset-1">
                                <div class="col-sm-4">
                                    <div class="form-check form-check-inline">

                                        <div class="choice" rel="tooltip" title="For sending SMS only">
                                            <input class="form-check-input" asp-for="CompanyModel.Type" type="radio" value=0/>
                                            <div class="icon">
                                                <i class="material-icons">speaker_phone</i>
                                            </div>
                                            <h6>@Localizer["Send"]</h6>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-check form-check-inline">
                                        <div class="choice" rel="tooltip" title="For recieved SMS only">
                                            <input class="form-check-input" asp-for="CompanyModel.Type" type="radio" value=1 />
                                            <div class="icon">
                                                <i class="material-icons">call_received</i>
                                            </div>
                                            <h6>@Localizer["Receive"]</h6>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-check form-check-inline">
                                        <div class="choice" rel="tooltip" title="For Sending and Recieving SMS">
                                            <input class="form-check-input" asp-for="CompanyModel.Type" type="radio" value=2 />
                                            <div class="icon">
                                                <i class="material-icons">import_export</i>
                                            </div>
                                            <h6>@Localizer["SendReceive"]</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="CompanyModel.Type" class="text-danger"></span>

                            <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">@Localizer["Next"]</button>

                        </div>
                    </div>
                </div>
            </div>


            <div class="row setup-content" id="step-3">
                <h3> @Localizer["Choose Tariff"]</h3>
                <div class="container">
                    <div style="float:left;">
                        <table class="table table-striped table-bordered" style="display: inline-block;">
                            <thead class="thead-dark">
                                <tr>
                                    <th class="col-md-4">
                                        @Html.DisplayNameFor(model => model.OperatorModel.OperatorsList)
                                    </th>
                                    <th class="col-md-4"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OperatorModel.OperatorsList)
                                {
                                    <tr>
                                        <td class="col-md-5">
                                            @item.Name
                                        </td>
                                        <td class="col-md-5">
                                            <div class="form-check form-check-inline">
                                                <input type="radio" value="@item.Id" name="1radio"  onchange="GetTariff(this)" />
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div style="float:left;">
