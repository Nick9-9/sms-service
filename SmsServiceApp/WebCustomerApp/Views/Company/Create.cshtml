                            <thead class="thead-dark">
                                <tr>
                                    <td><label asp-for="TariffModels.Name"></label></td>
                                    <td><label asp-for="TariffModels.Description"></label></td>
                                    <td><label asp-for="TariffModels.Price"> </label></td>
                                    <td><label asp-for="TariffModels.Limit"> </label></td>
                                    <td><input type="hidden" asp-for="TariffModels.Id"></td>
                                </tr>
                            </thead>
                        </table>
                        <input id="tariff" type="hidden" class="tariff" asp-for="CompanyModel.TariffId">
                    </div>
                </div>
                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">@Localizer["Next"]</button>
            </div>

            <div class="row setup-content" id="step-5">




                <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">@Localizer["Add Recipients"]</button>
              
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">

    
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <ul class="nav nav-tabs">
                                    <li class="active"><a data-toggle="tab" href="#home">@Localizer["Manually"]</a></li>
                                    <li><a data-toggle="tab" href="#menu1">@Localizer["Upload"]</a></li>
                                </ul>
                            </div>
                            <div class="modal-body">
                                <div class="container">



                                    <div class="tab-content">
                                        <div id="home" class="tab-pane fade in active">
                                            <h3>@Localizer["Add Recipients"]</h3>
                                            <table>
                                                <tr>
                                                    <td>
                                                        <label asp-for="RecipientModel.Phonenumber"></label>
                                                    </td>
                                                    <td>
                                                        <input id="phoneNumber" type="text" />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <label asp-for="RecipientModel.Name"></label>
                                                    </td>
                                                    <td>
                                                        <input id="name" type="text" />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <label asp-for="RecipientModel.Surname"></label>
                                                    </td>
                                                    <td>
                                                        <input id="surname" type="text" />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <label asp-for="RecipientModel.Birthdate"></label>
                                                    </td>
                                                    <td>
                                                        <input id="birthDate" width="175" />
                                                        <script>
                                                            $('#birthDate').datepicker({ footer: true, modal: true, format: 'dd.mm.yyyy' });
                                                        </script>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <label asp-for="RecipientModel.Gender"></label>
                                                    </td>
                                                    <td>
                                                        <input type="radio" name="gender" checked id="genderMale" value="Male">@Localizer["Male"]
                                                        <br>
                                                        <input type="radio" name="gender" id="genderFemale" value="Female">@Localizer["Female"]
                                                        <br>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>
                                                        <label asp-for="RecipientModel.Keywords"></label>
                                                    </td>
                                                    <td>
                                                        <input id="keywords" type="text" />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <button type='button' class="btn btn-primary" id='insert' onclick='onAddContact()'>
                                                            <span class='glyphicon glyphicon-plus' /> @Localizer["ADD"]
                                                        </button>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                        <div id="menu1" class="tab-pane fade">
                                            <h4>@Localizer["Add recipients from file"]</h4>
                                            <input type="file" id="fileUpload" />
                                            <input type="button" class="btn btn-primary" id="upload" onclick="GetFromFile();" value="Upload" />
                                        </div>
                                        <div id="msg"></div>
