                locale: "@culture",
                selectData: "now",
                positionShift: { top: 20, left: 0 },
                title: "@Localizer["Select Date and Time"]",
                buttonTitle: "@Localizer["Select"]"
            });
             $('#EndTimeSR').dateTimePicker({
                locale: "@culture",
                selectData: "now",
                positionShift: { top: 20, left: 0 },
                title: "@Localizer["Select Date and Time"]",
                buttonTitle: "@Localizer["Select"]"
            });
            })
        })(jQuery);
    </script>
    <script>
        (function ($) {
        $(document).ready(function () {
            $('#SendTime').dateTimePicker({
                locale: "@culture",
                selectData: "now",
                positionShift: { top: 20, left: 0 },
