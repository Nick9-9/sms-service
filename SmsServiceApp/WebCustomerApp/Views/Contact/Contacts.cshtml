<html>
<head>

    <script src="https://code.jquery.com/jquery-3.2.1.min.js"
            integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
            crossorigin="anonymous"></script>

    <script src="https://unpkg.com/gijgo@1.9.11/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.11/css/gijgo.min.css" rel="stylesheet" type="text/css" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">

    <script src="~/js/TemplateTableWithFunctional.js">
    </script>

</head>
<body>
    <h3>Contact Manager</h3>
    <form style="padding-left:0em;">
            <table id="contactTable" width="50" style="border: 1px solid #999; padding-left: 0em;" cellpadding="1">
                <thead>
                    <tr>
                        <td class="col-md-1 col-md-offset-1"><label> Phone number </label></td>
                        <td class="col-md-1"> Name </td>
                        <td class="col-md-1"> Surname </td>
                        <td class="col-md-1"> Birth date </td>
                        <td class="col-md-1"> Gender </td>
                        <td class="col-md-1"> Priority </td>
                        <td class="col-md-1"> Notes </td>
                        <td class="col-md-1"> Keywords </td>
                        <td class="col-md-1"> </td>
                    </tr>
                    <tr>
                        <td><input id="phoneNumber" type="text" /></td>
                        <td><input id="name" type="text" /></td>
                        <td><input id="surname" type="text" /></td>
                        <td>
                            <input id="birthDate" />
                            <script>
                                $('#input').datetimepicker({ footer: true, modal: true });
                            </script>
                        </td>
                        <td>
                            <input type="radio" name="gender" id="genderMale" value="male">Male<br>
                            <input type="radio" name="gender" id="genderFemale" value="female">Female<br>
                        </td>
                        <td>
                            <select id="priority">
                                <option>Low</option>
                                <option>Medium</option>
                                <option>High</option>
                            </select>
                        </td>
                        <td><input id="notes" type="text" /></td>
                        <td><input id="keywords" type="text" /></td>
                        <td><button type='button' id="insert" onclick='onAddContact(this)' class='btn btn-default'>
                            <span class='glyphicon glyphicon-plus' />Insert</button></td>
                    </tr>
                    <tr>
                        <td><label>Search field</label></td>
                        <td><input id="searchField" type="text" /></td>
                        <td>
                            <button type='button' id="search" onclick='searchContacts()' class='btn btn-default'>
                                <span class='glyphicon glyphicon-search' />Search
                            </button>
                        </td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </thead>
            </table>
        <div style="padding:inherit" class="btn-group" id="pageButtons">
        <button type="button" class="btn btn-default" onclick="" id="previousPage"><span class='glyphicon glyphicon-triangle-left' /></button>
        <button type="button" class="btn btn-default" onclick="" id="Page1">1</button>
        <button type="button" class="btn btn-default" onclick="" id="nextPage"><span class='glyphicon glyphicon-triangle-right' /></button>
        </div>
        <br />
        <div id="msg"></div>
    </form>
</body>
</html>
