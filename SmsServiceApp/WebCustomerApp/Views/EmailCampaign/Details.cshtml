@using Model.ViewModels.EmailCampaignViewModels;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model EmailCampaignViewModel;

@{
    ViewData["Title"] = Localizer["Details"];
}
<!DOCTYPE html>
<html>
<head>
    <title>@Localizer["Details"]</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"
            integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
            crossorigin="anonymous"></script>
</head>
<body>
    <h2>@Model.Name</h2>
    <h4>@Model.Description</h4>
    <hr />
    <div class="row">
        <div class="col-md-5">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.EmailAddress)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.EmailAddress)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.RecipientsCount)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.RecipientsCount)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.SendingTime)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.SendingTime)
                </dd>
            </dl>
        </div>
        <div class="col-md-5">
            <div class="row"><a class="btn btn-warning" style="width: 120px;" asp-route-campaignId="@Model.Id" asp-action="Edit">@Localizer["Edit"]</a></div> <br />
            <div class="row">
                <form asp-action="Delete" asp-route-campaignId="@Model.Id">
                    <button type="submit" class="btn btn-danger" style="width: 120px;">@Localizer["Delete"]</button>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-success" asp-action="Index">@Localizer["Back to List"]</a>
    </div>
</body>
</html>
