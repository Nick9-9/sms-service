@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization;
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Create"];
    var requestCulture = CultureInfo.CurrentCulture;
    var culture = requestCulture.TwoLetterISOLanguageName;
}

<!DOCTYPE html>
<html>
<head>
    <title>Create Email Campaign</title>
    <meta charset="utf-8" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900|Material+Icons" rel="stylesheet">
    <link href="~/css/vuetify.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, minimal-ui">
    <link href="~/css/datetimepicker.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"
            integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment-with-locales.js" integrity="sha256-dgFbqbQVzjkZPQxWd8PBtzGiRBhChc4I2wO/q/s+Xeo=" crossorigin="anonymous"></script>
    <script src="~/js/datetimepicker.js"></script>
    <script src="https://unpkg.com/gijgo@1.9.11/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.11/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <script src='https://cloud.tinymce.com/5/tinymce.min.js'></script>
    <script src="~/js/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vuetify/dist/vuetify.js"></script>
    <script src="~/js/axios.js"></script>
    <script>
        (function ($) {
            $(document).ready(function () {
                $('#sendTime').dateTimePicker({
                    locale: "@culture",
                    selectData: "now",
                    positionShift: { top: 20, left: 0 },
                    title: "@Localizer["Select Date and Time"]",
                    buttonTitle: "@Localizer["Select"]"
                });
            })
        })(jQuery);

        function ShowDate() {
            var sendNow = document.getElementById("SendNowRadio");
            var sendLater = document.getElementById("SendLaterRadio");
            if (sendLater.checked) {
                document.getElementById("sendTime").style.display = 'block';
            }
            if (sendNow.checked) {
                document.getElementById("sendTime").style.display = 'none';
            }
        }

        tinymce.init({
            selector: '#myTextarea',
            height: 600
        });
    </script>
    <style>
        .spanError {
            color: red;
        }

        .tox-notifications-container {
            display: none;
        }
    </style>
</head>
<body>
    <div id="app">
        <v-app>

            <v-content>

                <v-container>
                    <v-stepper v-model="step" vertical>
                        <v-stepper-header>
                            <v-stepper-step step="1" :complete="firstStepComplite" v-on:click="step = 1">Main Information</v-stepper-step>
                            <v-divider></v-divider>
                            @*<v-stepper-step step="2" :complete="step > 2">Select tempalate</v-stepper-step>
                            <v-divider></v-divider>*@
                            <v-stepper-step step="2" :complete="secondStepComplite" v-on:click="step = 2">Create mail</v-stepper-step>
                            <v-divider></v-divider>
                            <v-stepper-step step="3" :complete="thirdStepComplite" v-on:click="step = 3">Add recepients</v-stepper-step>
                            <v-divider></v-divider>
                            <v-stepper-step step="4" v-on:click="step = 4">Finish</v-stepper-step>
                        </v-stepper-header>
                        <v-stepper-items>
                            <v-stepper-content step="1">

                                <v-text-field label="Name" v-model="Campaign.name" required></v-text-field>
                                <span class="spanError" id="NameValidationError"></span>
                                <v-text-field label="Email" v-model="Campaign.emailAddress" required></v-text-field>
                                <span class="spanError" id="EmailValidationError"></span>
                                <v-textarea label="Description" v-model="Campaign.description" required></v-textarea>
                                <label>Time of send</label>
                                <br />
                                <label><input type="radio" id="SendNowRadio" name="SendTime" v-model="Campaign.sendNow" value="true" onclick="ShowDate()">Send now</label>
                                <label><input type="radio" id="SendLaterRadio" name="SendTime" v-model="Campaign.sendNow" value="false" onclick="ShowDate()">Send later</label>
                                <div id="sendTime" style="display: none;"> </div>
                                <input type="hidden" id="result" v-model="Campaign.sendingTime">
                                <span class="spanError" id="SendTimeValidationError"></span>
                                <br />
                                <v-btn color="primary" v-on:click.native="FirstStep">Continue</v-btn>
                            </v-stepper-content>
                            <v-stepper-content step="2">

                                <textarea name="myTextarea" id="myTextarea"></textarea>

                                <v-btn flat v-on:click.native="step = 1">Previous</v-btn>
                                <v-btn color="primary" v-on:click.native="SecondStep">Continue</v-btn>

                            </v-stepper-content>
                            <v-stepper-content step="3">

                                <div>
                                    <v-text-field label="Email" v-model="Recepient.EmailAddress" required></v-text-field>
                                    <span class="spanError" id="RecepientEmailValidationError"></span>
                                    <v-text-field label="Name" v-model="Recepient.Name" required></v-text-field>
                                    <v-text-field label="Surname" v-model="Recepient.Surname" required></v-text-field>
                                    <input placeholder="Birthday" id="birthDate" v-model="Recepient.BirthDate" required />
                                    <v-select :items="Gender" label="Gender" v-model="Recepient.Gender"></v-select>
                                    <v-select :items="Priority" label="Priority" v-model="Recepient.Priority"></v-select>
                                    <v-text-field label="Key words" v-model="Recepient.KeyWords" required></v-text-field>
                                    <v-btn color="green" v-on:click.native="AddRecepient">Add</v-btn>
                                </div>

                                <div>
                                    <br />
                                    <table class="table table-striped table-bordered">
                                        <thead class="thead-dark">
                                            <tr>
                                                <td><label>Email</label></td>
                                                <td><label>Name</label></td>
                                                <td><label>Surname</label></td>
                                                <td><label>Birthday</label></td>
                                                <td><label>Gender</label></td>
                                                <td><label>Priority</label></td>
                                                <td><label>Key words</label></td>
                                                <td> </td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr v-for="item in Recepients">
                                                <td>{{ item.EmailAddress}}</td>
                                                <td>{{ item.Name}}</td>
                                                <td>{{ item.Surname}}</td>
                                                <td>{{ item.BirthDate}}</td>
                                                <td>{{ item.Gender}}</td>
                                                <td>{{ item.Priority}}</td>
                                                <td>{{ item.KeyWords}}</td>
                                                <td><button value="Delete" class="btn btn-success" :data-recId="item.Id" v-on:click="DeleteRecepient">Delete</button></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <h1 v-if="Campaign.recepientsCount == 0">You have not Recepients</h1>

                                <v-btn flat v-on:click.native="step = 2">Previous</v-btn>
                                <v-btn color="primary" v-on:click.native="ThirdStep">Continue</v-btn>

                            </v-stepper-content>
                            <v-stepper-content step="4">

                                <v-text-field readonly label="Name" v-model="Campaign.name" required></v-text-field>
                                <v-text-field readonly label="Email" v-model="Campaign.emailAddress" required></v-text-field>
                                <v-textarea readonly label="Description" v-model="Campaign.description" required></v-textarea>
                                <v-text-field readonly label="Time of send" v-model="Campaign.sendingTime" required></v-text-field>
                                <v-text-field readonly label="Recepients Count" v-model="Campaign.recipientsCount" required></v-text-field>

                                <v-btn flat v-on:click.native="step = 3">Previous</v-btn>
                                <v-btn color="primary" v-on:click.prevent="submit">Save</v-btn>

                            </v-stepper-content>
                        </v-stepper-items>
                    </v-stepper>
                </v-container>
            </v-content>
        </v-app>
    </div>
    <script src="~/js/EmailCampaignCreatejs.js"></script>
<script>
    $('#birthDate').datepicker({ footer: true, modal: true, format: 'dd.mm.yyyy' });
    $('#birthDate').val(new Date(1901, 1, 1).toLocaleDateString());
</script>
</body>
</html>