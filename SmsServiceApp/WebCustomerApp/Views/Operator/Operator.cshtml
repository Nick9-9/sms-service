@using Model.ViewModels.OperatorViewModels
@model OperatorViewModel

<form asp-action="Operator" asp-controller="Operator" method="post" asp-antiforgery="true">
    <div class="row">
        <input type="hidden" class="form-control" asp-for="Id" />
        <div class="form-group col-md-4">
            <input type="text" class="form-control" placeholder="Group" asp-for="Name" />
        </div>
        <div class="form-group col-md-4">
            <div class="btn-group">
                <button type="submit" class="btn btn-default">Save</button>
                <a class="btn btn-default" role="button" asp-action="Remove" asp-controller="Operator" asp-route-OperatorId="@Model.Id">Remove</a>
                <a class="btn btn-default" role="button" asp-action="Create" asp-controller="Tariff" asp-route-OperatorId="@Model.Id">Manage tariffs</a>
            </div>
        </div>
    </div>
</form>