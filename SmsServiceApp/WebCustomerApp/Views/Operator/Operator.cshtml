@using Model.ViewModels.OperatorViewModels
@model OperatorWithNavigationViewModel

<form asp-action="Operator" asp-controller="Operator" method="post" asp-antiforgery="true">
    <div class="row">
        <input type="hidden" class="form-control" asp-for="Operator.Id" />
        <input asp-for="SearchQuerry" value="@ViewBag.SearchQuerry" hidden />
        <input asp-for="Page" value="@ViewBag.CurrentPage" hidden />
        <div class="form-group col-md-4">
            <input type="text" class="form-control" placeholder="Operator name" asp-for="Operator.Name" />
            <span asp-validation-for="Operator.Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-8">
            <div class="btn-group">
                <button type="submit" class="btn btn-default">
                    <span class="glyphicon glyphicon-floppy-save" aria-hidden="true"></span> Save
                </button>
                <a class="btn btn-default" role="button" asp-action="Remove" asp-controller="Operator"
                   asp-route-OperatorId="@Model.Operator.Id" asp-route-Page="@Model.Page" asp-route-SearchQuerry="@Model.SearchQuerry">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Remove
                </a>
                <a class="btn btn-default" role="button" asp-action="Create" asp-controller="Tariff" asp-route-OperatorId="@Model.Operator.Id">
                    <span class="glyphicon glyphicon-usd" aria-hidden="true"></span> Manage tariffs
                </a>
                <a class="btn btn-default" role="button" asp-action="Codes" asp-controller="Code" asp-route-OperatorId="@Model.Operator.Id">
                    <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> Manage codes
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
