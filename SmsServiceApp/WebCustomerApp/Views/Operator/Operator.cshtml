@using Model.ViewModels.OperatorViewModels
@model OperatorViewModel

<form asp-action="Operator" asp-controller="Operator" method="post" asp-antiforgery="true">
    <div class="row">
        <input type="hidden" class="form-control" asp-for="Id" />        
        <div class="form-group col-md-4">
            <input type="text" class="form-control" placeholder="Operator name" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-8">
            <div class="btn-group">
                <button type="submit" class="btn btn-default">
                    <span class="glyphicon glyphicon-floppy-save" aria-hidden="true"></span> Save
                </button>
                <a class="btn btn-default" role="button" asp-action="Remove" asp-controller="Operator"
                   asp-route-OperatorId="@Model.Id">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Remove
                </a>
                <a class="btn btn-default" role="button" asp-action="Create" asp-controller="Tariff" asp-route-OperatorId="@Model.Id">
                    <span class="glyphicon glyphicon-usd" aria-hidden="true"></span> Manage tariffs
                </a>
                <a class="btn btn-default" role="button" asp-action="EditCodes" asp-controller="Operator" asp-route-Id="@Model.Id">
                    <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> Manage codes
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
