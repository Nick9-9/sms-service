@using Model.ViewModels.OperatorViewModels
@model OperatorViewModel

<h2>Operators</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Operators" asp-controller="Operator" method="post" asp-antiforgery="true">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Add Operator</button>
        </form>
    </div>
</div>

<hr />
<h4>Operators list</h4>

@foreach (OperatorViewModel iter in ViewBag.Operators)
{
    { await Html.RenderPartialAsync("Operator", iter); }
}