@using Model.ViewModels.OperatorViewModels
@model OperatorViewModel
<h2>Operators</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Operators" asp-controller="Operator" method="post" asp-antiforgery="true">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Add Operator</button>
        </form>
    </div>
</div>

<hr />
<h4>Operators list</h4>

@{await Html.RenderPartialAsync("SearchOperators");}

@foreach (OperatorViewModel iter in ViewBag.Operators)
{
    { await Html.RenderPartialAsync("Operator", iter); }
}

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" asp-action="PreviousPage" asp-controller="Operator" asp-route-CurrentPage="@ViewBag.CurrentPage">Previous</a></li>
        @for (int i = 1; i <= ViewBag.NumOfpages; i++)
        {
            if (i == ViewBag.CurrentPage)
            {
                <li class="page-item active"><a class="page-link" asp-action="Operators" asp-controller="Operator" asp-route-Page="@i">@i</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" asp-action="Operators" asp-controller="Operator" asp-route-Page="@i">@i</a></li>
            }
        }
        <li class="page-item"><a class="page-link" asp-action="NextPage" asp-controller="Operator" asp-route-CurrentPage="@ViewBag.CurrentPage">Next</a></li>
    </ul>
</nav>

