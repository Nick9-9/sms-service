@using Model.ViewModels.OperatorViewModels
@model OperatorViewModel
<h2>Operators</h2>
<hr />

@if (TempData.ContainsKey("ErrorMessage"))
{
    <div class="alert alert-danger" role="alert">@TempData["ErrorMessage"]</div>
}

<h4>Add operator</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Operators" asp-controller="Operator" method="post" asp-antiforgery="true">
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder="New operator name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add
            </button>
        </form>
    </div>
</div>

<hr />
<h4>Operators list</h4>

@{await Html.RenderPartialAsync("SearchOperators", new OperatorSearchViewModel() { SearchQuerry = ViewBag.SearchQuerry });}

@foreach (OperatorViewModel iter in ViewBag.Operators)
{
    { await Html.RenderPartialAsync("Operator", iter); }
}

@if (ViewBag.NumOfpages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @if (ViewBag.CurrentPage == 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="PreviousPage" asp-controller="Operator">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    </a>
                </li>
            }

            @for (int i = 1; i <= ViewBag.NumOfpages; i++)
            {
                if (i == ViewBag.CurrentPage)
                {
                    <li class="page-item active">
                        <a class="page-link" asp-action="SelectPage" asp-controller="Operator"
                           asp-route-Page="@i">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="SelectPage" asp-controller="Operator"
                           asp-route-Page="@i">@i</a>
                    </li>
                }
            }
            @if (ViewBag.CurrentPage == ViewBag.NumOfPages)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="NextPage" asp-controller="Operator">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    </a>
                </li>
            }

        </ul>
    </nav>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
