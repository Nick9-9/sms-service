@using Model.ViewModels.OperatorViewModels
@model OperatorSearchViewModel

<div class="row">
    <div class="col-md-3">
        <form asp-action="SearchOperators" asp-controller="Operator" method="post" asp-antiforgery="true">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SearchQuerry"></label>
                <div class="input-group mb-3">
                    <input asp-for="SearchQuerry" type="text" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-default">Add Operator</button>
                    </div>
                </div>
                <span asp-validation-for="SearchQuerry" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>