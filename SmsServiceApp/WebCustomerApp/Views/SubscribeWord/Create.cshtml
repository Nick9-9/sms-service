@using Model.ViewModels.SubscribeWordViewModels;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SubscribeWordViewModel;
<!DOCTYPE html>
<html>
<head>
    <title>@Localizer["SubscribeWord"]</title>
</head>
<body>
<h2>@Localizer["SubscribeWord"]</h2>
<h4>@Localizer["Campaign"]</h4>
<hr /> <div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Word" class="control-label"></label>
                <input asp-for="Word" class="form-control" placeholder="@Localizer["Enter stop word"]" />
                <span asp-validation-for="Word" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Create"]" class="btn btn-success" />
                <a class="btn btn-primary" asp-action="Index">@Localizer["Back to List"]</a>
            </div>
        </form>
    </div>
</div>
   
<div>
    <a class="btn btn-primary"asp-route-companyId="2" asp-action="Details" asp-controller="Company">@Localizer["Back to Details"]</a>

    <a class="btn btn-primary" asp-action="Index">@Localizer["Back to List"]</a>
</div>
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
