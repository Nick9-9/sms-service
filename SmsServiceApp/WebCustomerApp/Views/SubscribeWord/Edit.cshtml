@using Model.ViewModels.SubscribeWordViewModels;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SubscribeWordViewModel;
<!DOCTYPE html>
<html>
<head>
    <title>@Localizer["Subscribe Word"]</title>
</head>
<body>
<div class="container">
    <h2>@Localizer["Subscribe Word"]</h2>
    <h4>@Localizer["Company"]</h4>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CompanyId" />
        <div class="form-group">
            <label asp-for="Word" class="control-label"></label>
            <input asp-for="Word" class="form-control" />
            <span asp-validation-for="Word" class="text-danger"></span>

            @*<label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>*@
        </div>
        <div class="form-group">
            <input type="submit" value="@Localizer["Save"]" class="btn btn-success" />
            <a asp-action="Details" asp-route-companyId="@Model.CompanyId" asp-controller="Company" class="btn btn-primary">@Localizer["Back to Details"]</a>
        </div>
    </form>

    <div>
        <a class="btn btn-primary" asp-route-companyId="@Model.CompanyId" asp-action="Index" asp-controller="Company">@Localizer["Back to List"]</a>

    </div>
    </div>
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
