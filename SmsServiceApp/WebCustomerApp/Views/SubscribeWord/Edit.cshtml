@using Model.ViewModels.SubscribeWordViewModels;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SubscribeWordViewModel;
<!DOCTYPE html>
<html>
<head>
    <title>@Localizer["SubscribeWord"]</title>
</head>
<body>
<h2>@Localizer["SubscribeWord"]</h2>
<h4>@Localizer["Campaign"]</h4>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Word" class="control-label"></label>
        <input asp-for="Word" class="form-control" />
        <span asp-validation-for="Word" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="@Localizer["Save"]" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-primary">@Localizer["Back to List"]</a>
    </div>
</form>
   
<div>
    <a class="btn btn-primary"asp-route-companyId="2" asp-action="Index">@Localizer["Back to List"]</a>

