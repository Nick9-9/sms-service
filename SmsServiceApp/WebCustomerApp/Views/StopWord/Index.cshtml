@using Model.ViewModels.StopWordViewModels;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<StopWordViewModel>;

@{
    ViewData["Title"] = Localizer["Create"];
}

<h2>@Localizer["Stop Word"]</h2>



<p>
    <a class="btn btn-success" asp-action="Create"><i class="glyphicon glyphicon-plus"></i> @Localizer["Create New"]</a>
</p>
<div class="container">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>

                <th scope="col" class="col-md-4">
                    @Html.DisplayNameFor(model => model.Word)
                </th>
                <th scope="col" class="col-md-4"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Word)
                    </td>

                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="glyphicon glyphicon-edit"></i></a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="glyphicon glyphicon-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>  