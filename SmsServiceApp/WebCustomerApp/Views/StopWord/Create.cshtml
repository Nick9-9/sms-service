@using Model.ViewModels.StopWordViewModels;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model StopWordViewModel
@{
    ViewData["Title"] = Localizer["Create"];
}

<!DOCTYPE html>
<html>
<head>
    <title>@Localizer["Stop Word"]</title>
    <script>


        function onAddWord() {
            var stModel = {};
            stModel.Word = $("#word").val();
            $.ajax(
                {
                    url: '/StopWord/Create',
                    type: 'POST',
                    data: stModel
                });
        }



    </script>

</head>

<body>
    <h2>@Localizer["Create"]</h2>
    <h4>@Localizer["Stop Word"]</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Word" class="control-label"></label>
                    <input asp-for="Word" class="form-control" />
                    <span asp-validation-for="Word" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="@Localizer["Create"]" class="btn btn-success" />
                    <a class="btn btn-primary" asp-action="Index">@Localizer["Back to List"]</a>

                </div>
            </form>
        </div>
    </div>
    <div>


    </div>
</body>

</html>

@section Scripts
    {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
