@using Model.ViewModels.CodeViewModels
@model CodeWithNavigationViewModel

<form asp-action="Code" asp-controller="Code" method="post" asp-antiforgery="true">
    <div class="row">
        <input type="hidden" class="form-control" asp-for="Code.Id" />
        <input asp-for="Code.OperatorId" value="@ViewBag.OperatorId" hidden />
        <input asp-for="Page" value="@ViewBag.CurrentPage" hidden />
        <div class="form-group col-md-4">
            <input type="text" class="form-control" placeholder="Operator code" asp-for="Code.OperatorCode" />
            <span asp-validation-for="Code.OperatorCode" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <div class="btn-group">
                <button type="submit" class="btn btn-default">
                    <span class="glyphicon glyphicon-floppy-save" aria-hidden="true"></span> Save
                </button>
                <a class="btn btn-default" role="button" asp-action="Remove" asp-controller="Code"
                   asp-route-CodeId="@Model.Code.Id" asp-route-Page="@Model.Page" asp-route-OperatorId="@Model.Code.OperatorId">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Remove
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
