@using Model.ViewModels.CodeViewModels
@model CodeWithNavigationViewModel
<h2>Codes for @ViewBag.OperatorName</h2>

<hr />
<h4>Add Code</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Codes" asp-controller="Code" method="post" asp-antiforgery="true">
            <input asp-for="Code.OperatorId" value="@ViewBag.OperatorId" hidden />
            <input asp-for="Page" value="@ViewBag.CurrentPage" hidden />
            <div class="form-group">
                <input asp-for="Code.OperatorCode" class="form-control" placeholder="New operator code" />
                <span asp-validation-for="Code.OperatorCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add
            </button>
        </form>
    </div>
</div>

<hr />
<h4>Operators list</h4>

@foreach (CodeWithNavigationViewModel iter in ViewBag.Codes)
{
    { await Html.RenderPartialAsync("Code", iter); }
}

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (ViewBag.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" asp-action="PreviousPage" asp-controller="Code"
                   asp-route-CurrentPage="@ViewBag.CurrentPage" asp-route-OperatorId="@ViewBag.OperatorId">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-action="PreviousPage" asp-controller="Code"
                   asp-route-CurrentPage="@ViewBag.CurrentPage" asp-route-OperatorId="@ViewBag.OperatorId">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                </a>
            </li>
        }

        @for (int i = 1; i <= ViewBag.NumOfpages; i++)
        {
            if (i == ViewBag.CurrentPage)
            {
                <li class="page-item active">
                    <a class="page-link" asp-action="Codes" asp-controller="Code"
                       asp-route-Page="@i" asp-route-OperatorId="@ViewBag.OperatorId">@i</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Codes" asp-controller="Code"
                       asp-route-Page="@i" asp-route-OperatorId="@ViewBag.OperatorId">@i</a>
                </li>
            }
        }
        @if (ViewBag.CurrentPage == ViewBag.NumOfPages)
        {
            <li class="page-item disabled">
                <a class="page-link" asp-action="NextPage" asp-controller="Code"
                   asp-route-CurrentPage="@ViewBag.CurrentPage" asp-route-OperatorId="@ViewBag.OperatorId">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-action="NextPage" asp-controller="Code"
                   asp-route-CurrentPage="@ViewBag.CurrentPage" asp-route-OperatorId="@ViewBag.OperatorId">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                </a>
            </li>
        }

    </ul>
</nav>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


